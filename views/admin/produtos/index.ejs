<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
  <hr>
  <h2>Produtos</h2>
  <a class="btn btn-success" href="/admin/produtos/new">Adicionar novo produto</a>
  <hr>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Id</th>
        <th>Produtos</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% produtos.forEach(produto => { %>
        <tr>
          <th><%= produto.id %></th>
          <th><%= produto.nome_tipo_produto %></th>
          <th>
            <a href="/admin/produtos/edit/<%= produto.id %>" class="btn btn-warning">Editar</a>
            <form method="POST" action="/produtos/delete" style="display: inline" onsubmit="confirmarDelecao(event, this)">
              <input type="hidden" name="id" value="<%= produto.id %>">
              <button class="btn btn-danger">Deletar</button>
            </form>
          </th>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../../partials/footer.ejs') %>
<script>
  function confirmarDelecao(event, form){
    event.preventDefault();
    var decision = confirm("Você que deletar este produto?");
    if(decision){
      form.submit();
    }
  }
</script>